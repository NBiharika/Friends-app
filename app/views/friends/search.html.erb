<h1>Search Results</h1>

<%= pluralize(@users.count, "Result for user") %>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th> </th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %> 
        <tr>
          <td>
            <%= user.first_name%>
            <%= user.last_name %>
          </td>
          
          <td><%= user.email %></td>
          <td><%= user.phone %></td>
          <td><%= user.twitter %></td>
        
          <td><%= link_to 'Add Friend', add_path(user), class:"btn btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

 