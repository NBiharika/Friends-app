<% provide(:friend_first_name, 'Friend Requests') %>

<% if user_signed_in? %>

<h1>Friend Requests</h1>
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
      </tr>
    </thead>

    <tbody>
      <% @requiredFriends.each do |friend| %> 
        <tr>
        <% @users.each do |user| %>
          <% if user.id == friend.user_id %>
            <td><%= user.first_name %> <%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= user.phone %></td>
            <td><%= user.twitter %></td>

            <td><%= link_to 'Accept', accept_path(user), class: 'btn btn-secondary' %></td>
            <td><%= link_to 'Decline', decline_path(user), method: :delete, class: "btn btn-danger"  %></td>
          <% end %>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'Back to all Users', users_path, class:"btn btn-secondary" %>

<% else %>

<h1>Hello World!</h1>
This is my first Rails Webpage...

<% end %>